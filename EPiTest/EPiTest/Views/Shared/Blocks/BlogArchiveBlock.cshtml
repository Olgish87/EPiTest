@using EPiServer
@using EPiTest.Models.Pages
@using EPiTest.Models.Pages.Blog
@model BlogArchiveBlock
<div class="row">
    <div class="span4">
        @if (Model.BlogStart != null)
        {
            <h3>Archive</h3>
            <ul>

                @foreach (var year in DataFactory.Instance.GetChildren<BlogListPage>(Model.BlogStart))
                {
                    <li>@Html.PageLink(year)</li>
                    <ul>
                        @foreach (var month in DataFactory.Instance.GetChildren<BlogListPage>(year.ContentLink))
                        {
                            <li>@Html.PageLink(month)</li>
                        }
                    </ul>
                }
            </ul>
        }
    </div>
</div>